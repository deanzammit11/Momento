<?xml version="1.0" encoding="utf-8"?>
<!-- Background drawable for add and rename category dialogs -->
<!-- Defines a mustard yellow rectangle with a dark text border and rounded corners -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@color/mustard_yellow"/>
    <stroke
        android:width="2dp"
        android:color="@color/dark_text"/>
    <corners android:radius="12dp"/>
</shape>
